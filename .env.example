# Environment Variables
# Copy this file to .env and fill in your values

# Gmail Configuration for Password Reset
GMAIL_USER=your.email@gmail.com
GMAIL_APP_PASSWORD=your-app-specific-password

# Frontend URL
FRONTEND_URL=http://localhost:5173

# Session Secret (generate a random string)
SESSION_SECRET=your-secret-key-here

# MongoDB Atlas Connection String
# Get this from MongoDB Atlas: Database -> Connect -> Drivers
# Replace YOUR_USERNAME, YOUR_PASSWORD, and YOUR_CLUSTER with actual values
MONGODB_URI=mongodb+srv://YOUR_USERNAME:YOUR_PASSWORD@YOUR_CLUSTER.mongodb.net/HavenTo?retryWrites=true&w=majority
